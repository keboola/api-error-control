{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Stack for testing API error control library",
    "Parameters": {
        "KeboolaStack": {
            "Type": "String",
            "Description": "All resources will be tagged by this value."
        }
    },
    "Resources": {
        "ApiErrorControlLogsBucket": {
            "Type": "AWS::S3::Bucket",
            "DeletionPolicy": "Delete"
        },
        "ApiErrorControlUser": {
            "Type": "AWS::IAM::User",
            "DeletionPolicy": "Delete",
            "Properties": {
                "Path": "/",
                "Policies": [
                    {
                        "PolicyName": "Owner",
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Sid": "UseS3Bucket",
                                    "Effect": "Allow",
                                    "Action": [
                                        "s3:PutObject",
                                        "s3:GetObject",
                                        "s3:ListBucket",
                                        "s3:DeleteObject"
                                    ],
                                    "Resource": [
                                        {
                                            "Fn::Join": [
                                                "",
                                                [
                                                    "",
                                                    {
                                                        "Fn::GetAtt": ["ApiErrorControlLogsBucket", "Arn"]
                                                    },
                                                    "/*"
                                                ]
                                            ]
                                        },
                                        {
                                            "Fn::GetAtt": ["ApiErrorControlLogsBucket", "Arn"]
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                ]
            },
            "DependsOn": [
                "ApiErrorControlLogsBucket"
            ]
        }
    },
    "Outputs": {
        "Region": {
            "Value": {
                "Ref": "AWS::Region"
            }
        }
    }
}
